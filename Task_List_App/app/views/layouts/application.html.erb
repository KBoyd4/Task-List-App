<!DOCTYPE html>
<html>
<head>
  <title>TaskListApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="primary">
  <% if flash[:message] %>
    <p class="flash-message"><%= flash[:message] %></p>
  <% end %>
</div>

<%= yield %>

<div id="footer">
	<%= render 'layouts/footer' %>
	<% if session[:user_id] %>
	<%= link_to 'Logout', logout_path %>
	<% else %>
	<%= link_to 'Login', login_path %>
	<% end %>

</div>

</body>
</html>
